{
  "name": "@danielsogl/lighthouse-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for Lighthouse web performance auditing and analysis",
  "main": "dist/index.js",
  "bin": {
    "lighthouse-mcp-server": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "prepare": "is-ci || husky",
    "prepublishOnly": "npm run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "lighthouse",
    "mcp",
    "model-context-protocol",
    "performance",
    "web-performance",
    "audit",
    "seo",
    "accessibility",
    "core-web-vitals"
  ],
  "author": "Daniel Sogl",
  "license": "MIT",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielsogl/lighthouse-mcp-server.git"
  },
  "homepage": "https://github.com/danielsogl/lighthouse-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/danielsogl/lighthouse-mcp-server/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "chrome-launcher": "^1.2.0",
    "lighthouse": "^12.6.0",
    "zod": "^3.25.46"
  }
}
